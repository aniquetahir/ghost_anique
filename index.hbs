{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}



<div class="head">
    <div class="headerobjectswrapper">
        <div class="hweatherforcastbox">

            <span style="font-style: italic;">{{@site.description}}</span>
        </div>


        <header>
            {{#if @site.logo}}
                <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
            {{else}}
                {{@site.title}}
            {{/if}}
        </header>
    </div>

    <div class="subhead">Tempe, AZ - <span class="today-date">Today</span>  - {{pagination.pages}} Page</div>
</div>

<div class="uk-child-width-1-1@s uk-child-width-1-3@m uk-child-width-1-4@l uk-grid-divider content-grid" uk-grid="masonry: true" >
    <div class="conttent-nav nvf">
        <br />
        {{> "site-nav"}}
    </div>
{{#foreach posts}}
    {{#if @first}}
<!--        <div class="uk-width-1-2@m">-->
            {{> "post-card"}}
<!--        </div>-->
    {{else}}
        {{> "post-card"}}
    {{/if}}

{{/foreach}}

</div>

{{pagination}}

